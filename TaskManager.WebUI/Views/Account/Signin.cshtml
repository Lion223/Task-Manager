@using TaskManager.WebUI.ViewModels.Identity
@model SignInViewModel
@{

    ViewData["Title"] = "Sign In";
}

<div id="modal_placeholder"></div>

<div class="container-fluid">
    <div class="row min-vh-100 d-flex align-items-center justify-content-center">
        <div class="col-lg-3 col-md-6 col-sm-8 col-8">
            <div class="tasks_header">
                <h2>Sign In</h2>
            </div>

            <form class="" method="post" asp-action="Signin">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form_row">
                    <input asp-for="Email" placeholder="Email" />
                    @*<span asp-validation-for="Email" class="text-danger"></span>*@
                </div>

                <div class="form_row">
                    <input asp-for="Password" placeholder="Password" />
                    @*<span asp-validation-for="Password" class="text-danger"></span>*@
                </div>

                <div class="form_row">
                    <input type="submit" value="Sign In" class="cancel_button" />
                </div>

                <div class="form_row ">
                    <button type="button" onclick="location.href='@Url.Action("Signup")'" class="apply_button w-100">Sign Up</button>
                </div>
            </form>
        </div>
    </div>
</div>