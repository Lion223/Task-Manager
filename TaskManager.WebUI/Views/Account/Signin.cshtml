@using TaskManager.WebUI.ViewModels
@model SignInModel
@{

    ViewData["Title"] = "Sign In";
}

<div id="modal_placeholder"></div>

<div class="container">
    <main role="main" class="pb-3">

        <div class="tasks_header">
            <h2>Sign In</h2>
        </div>

        <form method="post" asp-action="Signin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form_row">
                <input asp-for="Email" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form_row">
                <input asp-for="Password" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form_row">
                <input type="submit" value="Sign In" class="modal_apply_button" />
            </div>
        </form>

        <div class="form_row">
            <button type="button" onclick="location.href='@Url.Action("Signup")'" class="modal_apply_button">Sign Up</button>
        </div>

    </main>
</div>