@using TaskManager.WebUI.ViewModels.Identity
@model SignInViewModel
@{

    ViewData["Title"] = "Sign In";
}

<div id="modal_placeholder"></div>

<div class="container d-flex justify-content-center align-items-center ">
    <main role="main" class="flex-grow-1 m-mgt60">

        <div class="tasks_header">
            <h2>Sign In</h2>
        </div>

        <form class="" method="post" asp-action="Signin">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form_row">
                <input asp-for="Email" placeholder="Email" />
                @*<span asp-validation-for="Email" class="text-danger"></span>*@
            </div>

            <div class="form_row">
                <input asp-for="Password" placeholder="Password" />
                @*<span asp-validation-for="Password" class="text-danger"></span>*@
            </div>

            <div class="form_row">
                <input type="submit" value="Sign In" class="cancel_button" />
            </div>

            <div class="form_row">
                <button type="button" onclick="location.href='@Url.Action("Signup")'" class="apply_button">Sign Up</button>
            </div>
        </form>



    </main>
</div>