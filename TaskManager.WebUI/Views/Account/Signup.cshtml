@using TaskManager.WebUI.ViewModels.Identity
@model SignUpViewModel
@{

    ViewData["Title"] = "Sign Up";
}

<div id="modal_placeholder"></div>

<div class="container">
    <main role="main" class="pb-3">

        <div class="tasks_header">
            <h2>Sign Up</h2>
        </div>

        <form method="post" asp-action="Signup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form_row">
                <input asp-for="Email" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form_row">
                <input asp-for="Password" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form_row">
                <input asp-for="ConfirmPassword" placeholder="Confirm password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form_row">
                <input type="submit" value="Sign Up" class="apply_button" />
            </div>
        </form>

    </main>
</div>