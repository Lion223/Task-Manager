@using TaskManager.WebUI.ViewModels.Identity
@model SignUpViewModel
@{

    ViewData["Title"] = "Sign Up";
}

<div id="modal_placeholder"></div>

<div class="container-fluid">
    <div class="row min-vh-100 d-flex align-items-center justify-content-center">
        <div class="d-none d-sm-block col-sm-6 col-md-6 col-lg-6 col-xl-4">
            <div class="signup_header">
                <h2>Sign Up</h2>
            </div>
        </div>

        <div class="col-10 col-sm-6 col-md-6 col-lg-6 col-xl-4">
            <div class="signup_form_wrapper">
                <div class="sign_checkbox_container">
                    @Html.CheckBox("sign_checkbox", new { @class = "task_finished_checkbox" })
                </div>
                <form method="post" asp-action="Signup">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form_row">
                        <input asp-for="Email" placeholder="Email" />
                        @*<span asp-validation-for="Email" class="text-danger"></span>*@
                    </div>

                    <div class="form_row">
                        <input asp-for="Password" placeholder="Password" />
                        @*<span asp-validation-for="Password" class="text-danger"></span>*@
                    </div>

                    <div class="form_row">
                        <input asp-for="ConfirmPassword" placeholder="Confirm password" />
                        @*<span asp-validation-for="ConfirmPassword" class="text-danger"></span>*@
                    </div>

                    <div class="form_row justify-content-between">
                        <input type="submit" value="Sign Up" class="apply_button mb-3 mb-md-0 mr-md-3 flex-md-grow-1" />
                        <button type="button" onclick="location.href='@Url.Action("Signin")'" class="cancel_button flex-md-grow-1">Back</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>