<!-- ----- Partial view for Delete operation (modal) ----- -->

<!-- View model for Delete operation -->
@model TaskManager.WebUI.ViewModels.Tasks.DeleteViewModel

<!-- Overlay for modal window -->
<div class="modal_overlay h-100" id="modal_overlay">
    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-10 col-sm-8 col-md-6 col-lg-5">
                <!-- Modal window without header -->
                <div class="modal_window no_header">
                    <!-- Modal insides -->
                    <div class="modal_content">
                        <!-- Modal content -->
                        <div class="modal_body">
                            <!-- Delete form -->
                            <form method="post" asp-action="Delete" asp-controller="Tasks">
                                <!-- All of the view model's properties hidden to transfer the task without any changes -->
                                <input asp-for="TaskId" type="hidden" />
                                <input asp-for="UserId" type="hidden" />
                                <input asp-for="Type" type="hidden" />
                                <input asp-for="Description" type="hidden" />
                                <input asp-for="Priority" type="hidden" />
                                <input asp-for="Deadline" type="hidden" />
                                <input asp-for="Finished" type="hidden" />

                                <div class="form_row">
                                    <!-- https://stackoverflow.com/questions/5637969/is-an-empty-href-valid -->
                                    <input class="apply_button" type="submit" value="Delete" />
                                    <a class="cancel_button modal_cancel_button w-100" id="close_modal_button" href="javascript:;">Cancel</a>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>